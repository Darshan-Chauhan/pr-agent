# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_API_URL=https://api.github.com

# Default Repository Configuration
DEFAULT_REPO=browserstack/frontend
DEFAULT_BRANCH=master

# Application Configuration
APP_URL=http://localhost:3000
APP_STAGING_URL=https://staging.example.com
APP_PROD_URL=https://prod.example.com

# PR Configuration
# You can set a default PR number or leave empty
DEFAULT_PR_NUMBER=

# LLM Configuration (Ollama for scope inference and reporting)
OLLAMA_URL=http://127.0.0.1:11434
OLLAMA_MODEL=gemma3:4b
OLLAMA_TIMEOUT=30000

# Playwright Configuration
BROWSER_TYPE=chromium
HEADLESS=false
TIMEOUT=30000
VIEWPORT_WIDTH=1280
VIEWPORT_HEIGHT=720

# Exploration Configuration
MAX_STEPS=20
MAX_DURATION_MINUTES=5
RETRY_FAILED_STEPS=true
DRY_RUN=false

# Artifact Storage
ARTIFACTS_DIR=./artifacts
KEEP_ARTIFACTS_DAYS=7

# Notification Configuration (Nice-to-Have features)
SLACK_WEBHOOK_URL=
JIRA_API_URL=
JIRA_EMAIL=
JIRA_API_TOKEN=

# Debug Configuration
DEBUG_MODE=false
VERBOSE_LOGGING=true
SAVE_TRACES=true
SAVE_SCREENSHOTS=true
SAVE_HAR=true
SAVE_CPU_PROFILE=true
